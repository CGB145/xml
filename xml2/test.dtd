	<!ELEMENT marke (#PCDATA)>
	<!ELEMENT klasse (#PCDATA)>
	<!ELEMENT bezeichnung (#PCDATA)>
	<!ELEMENT beschreibung (#PCDATA)>

	<!ELEMENT angebot (gebinde*)>
	<!ELEMENT gebinde (menge,einheit,preis)*>
